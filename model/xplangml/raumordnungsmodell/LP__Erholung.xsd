			<xs:enumeration value="RodelbahnBobbahn"/>
			<xs:enumeration value="Wassersport"/>
			<xs:enumeration value="Wasserwanderweg"/>
			<xs:enumeration value="Schifffahrtsroute"/>
			<xs:enumeration value="AnlegestelleMitMotorbooten"/>
			<xs:enumeration value="AnlegestelleOhneMotorboote"/>
			<xs:enumeration value="SesselliftSchlepplift"/>
			<xs:enumeration value="Kabinenseilbahn"/>
			<xs:enumeration value="Parkplatz"/>
			<xs:enumeration value="Sonstiges"/>
		</xs:restriction>
	</xs:simpleType>
</xs:schema>
